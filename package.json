{
    "name": "events-ticketing",
    "description": "Manage your events",
    "version": "0.0.1",
    "author": "tobisupreme",
    "type": "module",
    "engines": {
        "node": ">=18"
    },
    "main": "dist/index.js",
    "exports": "./dist/index.js",
    "scripts": {
        "start": "tsx src/index.ts",
        "prestart:prod": "rimraf dist node_modules && npm install --production && npm run build",
        "start:prod": "node dist/index.js",
        "start:dev": "tsx watch src/index.ts",
        "build": "npx pkgroll",
        "migration:generate": "npx prisma migrate dev --create-only --schema=prisma/schema.prisma",
        "migration:apply": "npx prisma migrate deploy --schema=prisma/schema.prisma",
        "schema.format": "npx prisma format --schema=prisma/schema.prisma",
        "schema.generate": "npx prisma generate --schema=prisma/schema.prisma",
        "db.seed": "npx prisma db seed",
        "lint": "eslint .",
        "format:check": "prettier --check .",
        "format:write": "prettier --write ."
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "prisma": {
        "seed": "tsx ./prisma/seed.ts"
    },
    "lint-staged": {
        "*.{js,jsx,json,md,yml,yaml}": "npm run format:write",
        "*.{js,ts}": "npm run lint"
    },
    "license": "MIT",
    "dependencies": {
        "@faker-js/faker": "^9.2.0",
        "@prisma/client": "^5.22.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^5.0.1",
        "handlebars": "^4.7.8",
        "nodemailer": "^6.9.16",
        "pkgroll": "^2.5.1",
        "qrcode": "^1.5.4",
        "rimraf": "^6.0.1",
        "swagger-ui-express": "^5.0.1",
        "yaml": "^2.6.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/handlebars": "^4.0.40",
        "@types/node": "^22.9.0",
        "@types/nodemailer": "^6.4.17",
        "@types/qrcode": "^1.5.5",
        "@types/swagger-ui-express": "^4.1.7",
        "@types/yaml": "^1.9.6",
        "eslint": "^9.14.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prisma": "^5.22.0",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
